<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowOrderPreserved="true"
        android:orientation="vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_rowWeight="0.8"
            app:srcCompat="@drawable/ic_person_black_24dp" />

        <TextView
            android:id="@+id/cardTitleText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/defaultCardSpeakerName"
            android:textColor="@android:color/primary_text_light"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_margin="8dp"
            android:background="@color/grey" />

        <TextView
            android:id="@+id/cardTwitterHandle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:text="@string/defaultCardTwitterHandle"
            android:textSize="18sp"
            android:drawableStart="@drawable/twitter"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>